@model FinalProject.BLL.ViewModels.newsVM


<form method="post" action="/news/EditNews" enctype="multipart/form-data">
    @Html.HiddenFor(a => a.news_id)
    <div class="form-group row">
        @Html.LabelFor(a => a.Title, " عنوان الخبر", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-6">
            @Html.EditorFor(a => a.Title, new { @class = "form-control" })
        </div>
        <div class="col-sm-2">
            @Html.ValidationMessageFor(a => a.Title)
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(a => a.type_id, "نوع الخبر", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(a => a.type_id, ViewBag.typeslist as SelectList, new { @class = "col-sm-2 col-form-label" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(a => a.description, "تفاصيل الخبر", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-6">
            @Html.EditorFor(a => a.description, new { @class = "form-control" })
        </div>
        <div class="col-sm-2">
            @Html.ValidationMessageFor(a => a.description)
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(a => a.date, " تاريخ الخبر", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-6">
            @Html.EditorFor(a => a.date, new { @class = "form-control" })
        </div>
        <div class="col-sm-2">
            @Html.ValidationMessageFor(a => a.date)
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(a => a.image, "صورة الخبر(اختيارى)", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-6">
            @*@Html.EditorFor(a => a.image, new { @class = "form-control" })*@
            <img src="~/Images/@Model.image" style="width:100px;height:100px"/>
            <input type="file" name="img" value="browse..."/>
        </div>
        <div class="col-sm-2">
            @Html.ValidationMessageFor(a => a.image)
        </div>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">حفظ</button>
    </div>
</form>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
