@model FinalProject.BLL.ViewModels.newsTypeVM
<form method="post" action="/news_type/AddNewsType">
    <div class="form-group row">
        @Html.LabelFor(a => a.type_name, " نوع الخبر", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(a => a.type_name, new { @class = "form-control" })
        </div>
        <div class="col-sm-2">
            @Html.ValidationMessageFor(a => a.type_name)
        </div>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">حفظ</button>
    </div>
</form>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
